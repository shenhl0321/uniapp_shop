.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60px;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow:0px -2px 7px 0px rgba(239,239,239,0.75);
  padding-top: 8rpx;
  z-index: 100;
  border-top: none;
  overflow: visible; /* 确保内容可以超出边界 */
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  
}

.tab-bar-item .cover-image {
  position: relative;
  width: 20px;
  height: 20px;
  margin-bottom: 2px;
}

.tab-bar-item .cover-view {
  position: relative;
  font-size: 12px;
  margin-top: 2px;
}

.tab-bar-item .special-icon {
  position: absolute;
  top: -10px;  /* 根据需要调整突出的高度 */
  width: 50px;
  height: 50px;
  border-radius: 50%;
  box-shadow:0px -2px 7px 0px rgba(239,239,239,0.75);
  z-index: 101;
}